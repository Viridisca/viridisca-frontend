<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ========================================= -->
  <!-- VIRIDISCA LMS - ТИПОГРАФИКА -->
  <!-- ========================================= -->

  <!-- СЕМЕЙСТВА ШРИФТОВ -->
  <FontFamily x:Key="FontPrimary">Inter, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif</FontFamily>
  <FontFamily x:Key="FontMono">JetBrains Mono, Fira Code, Consolas, monospace</FontFamily>
  <FontFamily x:Key="FontDisplay">Inter, system-ui, sans-serif</FontFamily>

  <!-- РАЗМЕРЫ ШРИФТОВ -->
  <x:Double x:Key="FontSizeXs">12</x:Double>
  <x:Double x:Key="FontSizeSm">14</x:Double>
  <x:Double x:Key="FontSizeBase">16</x:Double>
  <x:Double x:Key="FontSizeLg">18</x:Double>
  <x:Double x:Key="FontSizeXl">20</x:Double>
  <x:Double x:Key="FontSize2Xl">24</x:Double>
  <x:Double x:Key="FontSize3Xl">30</x:Double>
  <x:Double x:Key="FontSize4Xl">36</x:Double>
  <x:Double x:Key="FontSize5Xl">48</x:Double>
  <x:Double x:Key="FontSize6Xl">60</x:Double>

  <!-- ВЕСА ШРИФТОВ -->
  <FontWeight x:Key="FontWeightThin">Thin</FontWeight>
  <FontWeight x:Key="FontWeightLight">Light</FontWeight>
  <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
  <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
  <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
  <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
  <FontWeight x:Key="FontWeightExtraBold">ExtraBold</FontWeight>

  <!-- ВЫСОТА СТРОК -->
  <x:Double x:Key="LineHeightTight">1.25</x:Double>
  <x:Double x:Key="LineHeightSnug">1.375</x:Double>
  <x:Double x:Key="LineHeightNormal">1.5</x:Double>
  <x:Double x:Key="LineHeightRelaxed">1.625</x:Double>
  <x:Double x:Key="LineHeightLoose">2.0</x:Double>

  <!-- СТИЛИ ЗАГОЛОВКОВ -->
  <Style x:Key="HeadingH1" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize4Xl}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,24" />
  </Style>

  <Style x:Key="HeadingH2" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize3Xl}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,20" />
  </Style>

  <Style x:Key="HeadingH3" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize2Xl}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,16" />
  </Style>

  <Style x:Key="HeadingH4" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXl}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,12" />
  </Style>

  <Style x:Key="HeadingH5" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeLg}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,8" />
  </Style>

  <Style x:Key="HeadingH6" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,8" />
  </Style>

  <!-- СТИЛИ ТЕКСТА -->
  <Style x:Key="TextLarge" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeLg}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
  </Style>

  <Style x:Key="TextBase" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
  </Style>

  <Style x:Key="TextSmall" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
  </Style>

  <Style x:Key="TextXSmall" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXs}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
  </Style>

  <!-- СПЕЦИАЛЬНЫЕ СТИЛИ -->
  <Style x:Key="TextMuted" Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
  </Style>

  <Style x:Key="TextSecondary" Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
  </Style>

  <Style x:Key="TextSuccess" Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
  </Style>

  <Style x:Key="TextDanger" Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
  </Style>

  <Style x:Key="TextWarning" Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
  </Style>

  <Style x:Key="TextInfo" Selector="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource InfoBrush}" />
  </Style>

  <!-- МОНОШИРИННЫЙ ТЕКСТ -->
  <Style x:Key="TextMono" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontMono}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
    <Setter Property="Background" Value="{StaticResource Gray100Brush}" />
    <Setter Property="Padding" Value="4,2" />
  </Style>

  <!-- СТИЛИ ДЛЯ ЛЕЙБЛОВ ФОРМ -->
  <Style x:Key="FormLabel" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Margin" Value="0,0,0,6" />
  </Style>

  <Style x:Key="FormHelperText" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXs}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    <Setter Property="Margin" Value="0,4,0,0" />
  </Style>

  <Style x:Key="FormErrorText" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXs}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}" />
    <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
    <Setter Property="Margin" Value="0,4,0,0" />
  </Style>

  <!-- СТИЛИ ДЛЯ СТАТИСТИКИ -->
  <Style x:Key="StatNumber" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontDisplay}" />
    <Setter Property="FontSize" Value="{StaticResource FontSize3Xl}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
  </Style>

  <Style x:Key="StatLabel" Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource FontPrimary}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSm}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
  </Style>

</ResourceDictionary> 