<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="800"
             x:Class="ViridiscaUi.Views.Components.NavigationMenuComponent">

  <UserControl.Styles>
    <!-- Navigation Menu Styles -->
    <Style Selector="Border.nav-container">
      <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
      <Setter Property="BorderThickness" Value="0,0,1,0" />
      <Setter Property="Padding" Value="0" />
      <Setter Property="MinWidth" Value="250" />
      <Setter Property="MaxWidth" Value="300" />
    </Style>
    
    <Style Selector="Border.nav-header">
      <Setter Property="Background" Value="{DynamicResource AccentButtonBackground}" />
      <Setter Property="Padding" Value="20,16" />
      <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    
    <Style Selector="TextBlock.nav-title">
      <Setter Property="FontSize" Value="20" />
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <Style Selector="TextBlock.nav-subtitle">
      <Setter Property="FontSize" Value="12" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="Opacity" Value="0.8" />
      <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    
    <Style Selector="Button.nav-item">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Padding" Value="20,12" />
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="CornerRadius" Value="0" />
      <Setter Property="Margin" Value="0,1" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="FontWeight" Value="Normal" />
    </Style>
    
    <Style Selector="Button.nav-item:pointerover">
      <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight3}" />
    </Style>
    
    <Style Selector="Button.nav-item.active">
      <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight2}" />
      <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    
    <Style Selector="Button.nav-category">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Padding" Value="20,8" />
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="HorizontalContentAlignment" Value="Left" />
      <Setter Property="CornerRadius" Value="0" />
      <Setter Property="Margin" Value="0,8,0,4" />
      <Setter Property="FontSize" Value="12" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="Opacity" Value="0.7" />
      <Setter Property="IsEnabled" Value="False" />
    </Style>
    
    <Style Selector="StackPanel.nav-group">
      <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    
    <Style Selector="PathIcon.nav-icon">
      <Setter Property="Width" Value="16" />
      <Setter Property="Height" Value="16" />
      <Setter Property="Margin" Value="0,0,12,0" />
      <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
  </UserControl.Styles>

  <Border Classes="nav-container">
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
      <StackPanel>
        
        <!-- Navigation Header -->
        <Border Classes="nav-header">
          <StackPanel>
            <TextBlock Classes="nav-title" 
                       Text="{Binding ApplicationTitle, FallbackValue='ViridiscaUi LMS'}" />
            <TextBlock Classes="nav-subtitle" 
                       Text="{Binding UserRole, FallbackValue='Система управления обучением'}" />
          </StackPanel>
        </Border>
        
        <!-- Dashboard Section -->
        <StackPanel Classes="nav-group">
          <Button Classes="nav-category" Content="ПАНЕЛЬ УПРАВЛЕНИЯ" />
          <Button Classes="nav-item"
                  Command="{Binding NavigateToDashboardCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Dashboard'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" />
              <TextBlock Text="Главная панель" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
        <!-- Academic Section -->
        <StackPanel Classes="nav-group" 
                    IsVisible="{Binding ShowAcademicSection}">
          <Button Classes="nav-category" Content="АКАДЕМИЧЕСКАЯ ДЕЯТЕЛЬНОСТЬ" />
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToCoursesCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Courses'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
              <TextBlock Text="Курсы" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToAssignmentsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Assignments'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6z" />
              <TextBlock Text="Задания" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToGradesCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Grades'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
              <TextBlock Text="Оценки" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToGroupsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Groups'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H17c-.8 0-1.54.37-2.01 1l-2.99 4v7h2v7h4v-7h2v-4l1.5-2h1.5v2z" />
              <TextBlock Text="Группы" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
        <!-- People Section -->
        <StackPanel Classes="nav-group" 
                    IsVisible="{Binding ShowPeopleSection}">
          <Button Classes="nav-category" Content="УЧАСТНИКИ" />
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToStudentsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Students'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 14c1.66 0 3-1.34 3-3V5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3z" />
              <TextBlock Text="Студенты" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToTeachersCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Teachers'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
              <TextBlock Text="Преподаватели" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToParentsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Parents'}"
                  IsVisible="{Binding ShowParentsSection}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H17c-.8 0-1.54.37-2.01 1l-2.99 4v7h2v7h4v-7h2v-4l1.5-2h1.5v2z" />
              <TextBlock Text="Родители" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
        <!-- Administration Section -->
        <StackPanel Classes="nav-group" 
                    IsVisible="{Binding ShowAdministrationSection}">
          <Button Classes="nav-category" Content="АДМИНИСТРИРОВАНИЕ" />
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToUsersCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Users'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
              <TextBlock Text="Пользователи" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToSystemSettingsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='SystemSettings'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z" />
              <TextBlock Text="Настройки системы" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToReportsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Reports'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" />
              <TextBlock Text="Отчеты" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
        <!-- Support Services Section -->
        <StackPanel Classes="nav-group" 
                    IsVisible="{Binding ShowSupportServicesSection}">
          <Button Classes="nav-category" Content="СЛУЖБЫ ПОДДЕРЖКИ" />
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToLibraryCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Library'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
              <TextBlock Text="Библиотека" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToPsychologyCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Psychology'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
              <TextBlock Text="Психологическая служба" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToHealthcareCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Healthcare'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              <TextBlock Text="Медицинская служба" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToQualityAssuranceCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='QualityAssurance'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
              <TextBlock Text="Контроль качества" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
        <!-- Profile Section -->
        <StackPanel Classes="nav-group">
          <Button Classes="nav-category" Content="ПРОФИЛЬ" />
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToProfileCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Profile'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
              <TextBlock Text="Мой профиль" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding NavigateToSettingsCommand}"
                  Classes.active="{Binding IsCurrentPage, ConverterParameter='Settings'}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z" />
              <TextBlock Text="Настройки" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
          
          <Button Classes="nav-item"
                  Command="{Binding LogoutCommand}">
            <StackPanel Orientation="Horizontal">
              <PathIcon Classes="nav-icon" 
                        Data="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z" />
              <TextBlock Text="Выйти" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
      </StackPanel>
    </ScrollViewer>
  </Border>
</UserControl> 