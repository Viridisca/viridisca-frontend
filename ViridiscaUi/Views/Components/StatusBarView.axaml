                    </StackPanel>
                </Button>

                <!-- Ð¡Ñ‡ÐµÑ‚Ñ‡Ð¸Ðº Ð¿Ñ€ÐµÐ´ÑƒÐ¿Ñ€ÐµÐ¶Ð´ÐµÐ½Ð¸Ð¹ -->
                <Button Classes="status-modern-button"
                        ToolTip.Tip="ÐŸÑ€ÐµÐ´ÑƒÐ¿Ñ€ÐµÐ¶Ð´ÐµÐ½Ð¸Ñ"
