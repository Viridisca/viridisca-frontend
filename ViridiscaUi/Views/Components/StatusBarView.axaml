                        </TextBlock.Transitions>
                    </TextBlock>
                    
                    <!-- Ð¢ÐµÐºÑÑ‚ ÑÐ¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ñ (Ð±ÐµÐ· Ð¾Ð³Ñ€Ð°Ð½Ð¸Ñ‡ÐµÐ½Ð¸Ñ ÑˆÐ¸Ñ€Ð¸Ð½Ñ‹) -->
                    <TextBlock Text="{Binding CurrentMessage.FormattedMessage}"
                               Classes="status-text"
                               TextWrapping="NoWrap" />
