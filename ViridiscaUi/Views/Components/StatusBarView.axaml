                        ToolTip.Tip="ÐžÑ‡Ð¸ÑÑ‚Ð¸Ñ‚ÑŒ Ð¸ÑÑ‚Ð¾Ñ€Ð¸ÑŽ"
                        IsVisible="{Binding !!TotalMessagesCount}">
                    <TextBlock Text="ðŸ—‘ï¸" FontSize="14" />
