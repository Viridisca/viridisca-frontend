            </StackPanel>

            <!-- Ð’Ñ€ÐµÐ¼Ñ ÑÐ¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ñ (Ð¾Ñ‚Ð´ÐµÐ»ÑŒÐ½Ð°Ñ ÐºÐ¾Ð»Ð¾Ð½ÐºÐ°) -->
            <Border Grid.Column="2"
