                        Margin="12,0">
                
                <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð¸ÑÑ‚Ð¾Ñ€Ð¸Ð¸ Ñ Ð¾Ð±Ñ‰Ð¸Ð¼ ÑÑ‡ÐµÑ‚Ñ‡Ð¸ÐºÐ¾Ð¼ -->
                <Button Classes="status-modern-button"
                        Command="{Binding ToggleHistoryCommand}"
                        ToolTip.Tip="ÐŸÐ¾ÐºÐ°Ð·Ð°Ñ‚ÑŒ/ÑÐºÑ€Ñ‹Ñ‚ÑŒ Ð¸ÑÑ‚Ð¾Ñ€Ð¸ÑŽ ÑÐ¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ð¹">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹" 
