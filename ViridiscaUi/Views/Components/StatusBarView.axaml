            <!-- ÐšÐ¾Ð½Ñ‚Ñ€Ð¾Ð»Ñ‹ Ð¸ ÑÑ‡ÐµÑ‚Ñ‡Ð¸ÐºÐ¸ -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
