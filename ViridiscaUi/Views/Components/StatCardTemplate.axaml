<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
             x:Class="ViridiscaUi.Views.Components.StatCardTemplate">

  <UserControl.Styles>
    <Style Selector="Border.stat-card">
      <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="12" />
      <Setter Property="Padding" Value="20" />
      <Setter Property="Margin" Value="8" />
      <Setter Property="BoxShadow" Value="0 4 12 0 #15000000" />
      <Setter Property="MinHeight" Value="120" />
    </Style>
    
    <Style Selector="Border.stat-card:pointerover">
      <Setter Property="BoxShadow" Value="0 6 16 0 #25000000" />
    </Style>
    
    <Style Selector="TextBlock.stat-value">
      <Setter Property="FontSize" Value="36" />
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="TextTrimming" Value="None" />
      <Setter Property="Margin" Value="0,8,0,4" />
    </Style>
    
    <Style Selector="TextBlock.stat-label">
      <Setter Property="FontSize" Value="14" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="Opacity" Value="0.8" />
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="TextTrimming" Value="None" />
      <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    
    <Style Selector="TextBlock.stat-change">
      <Setter Property="FontSize" Value="12" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="TextTrimming" Value="None" />
    </Style>
    
    <Style Selector="TextBlock.stat-change.positive">
      <Setter Property="Foreground" Value="#4CAF50" />
    </Style>
    
    <Style Selector="TextBlock.stat-change.negative">
      <Setter Property="Foreground" Value="#F44336" />
    </Style>
    
    <Style Selector="TextBlock.stat-change.neutral">
      <Setter Property="Foreground" Value="#FF9800" />
    </Style>
    
    <Style Selector="PathIcon.stat-icon">
      <Setter Property="Width" Value="24" />
      <Setter Property="Height" Value="24" />
      <Setter Property="HorizontalAlignment" Value="Center" />
      <Setter Property="Margin" Value="0,0,0,8" />
      <Setter Property="Foreground" Value="{DynamicResource AccentButtonBackground}" />
    </Style>
  </UserControl.Styles>

  <Border Classes="stat-card">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />  <!-- Icon -->
        <RowDefinition Height="*" />     <!-- Value -->
        <RowDefinition Height="Auto" />  <!-- Label -->
        <RowDefinition Height="Auto" />  <!-- Change -->
      </Grid.RowDefinitions>
      
      <!-- Icon -->
      <PathIcon Grid.Row="0" 
                Classes="stat-icon"
                Data="{Binding IconData}"
                IsVisible="{Binding IconData, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
      
      <!-- Value -->
      <TextBlock Grid.Row="1" 
                 Classes="stat-value"
                 Text="{Binding Value, FallbackValue='0'}"
                 Foreground="{Binding ValueColor, FallbackValue={DynamicResource SystemAccentColor}}" />
      
      <!-- Label -->
      <TextBlock Grid.Row="2" 
                 Classes="stat-label"
                 Text="{Binding Label, FallbackValue='Статистика'}" />
      
      <!-- Change Indicator -->
      <TextBlock Grid.Row="3" 
                 Classes="stat-change"
                 Text="{Binding ChangeText}"
                 IsVisible="{Binding ChangeText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                 Classes.positive="{Binding IsPositiveChange}"
                 Classes.negative="{Binding IsNegativeChange}"
                 Classes.neutral="{Binding IsNeutralChange}" />
    </Grid>
  </Border>
</UserControl> 