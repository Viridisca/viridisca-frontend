<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ViridiscaUi.ViewModels.Students"
        xmlns:models="using:ViridiscaUi.Domain.Models.Education"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
        x:Class="ViridiscaUi.Views.Education.Students.StudentEditorWindow"
        x:DataType="vm:StudentEditorViewModel"
        Title="{Binding Title}"
        Width="600" Height="700"
        WindowStartupLocation="CenterOwner">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="24" Margin="0,0,0,20"/>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="15">
                <!-- First Name -->
                <StackPanel>
                    <TextBlock Text="Имя:"/>
                    <TextBox Text="{Binding FirstName}" Watermark="Введите имя"/>
                </StackPanel>
                
                <!-- Last Name -->
                <StackPanel>
                    <TextBlock Text="Фамилия:"/>
                    <TextBox Text="{Binding LastName}" Watermark="Введите фамилию"/>
                </StackPanel>
                
                <!-- Middle Name -->
                <StackPanel>
                    <TextBlock Text="Отчество:"/>
                    <TextBox Text="{Binding MiddleName}" Watermark="Введите отчество (необязательно)"/>
                </StackPanel>
                
                <!-- Email -->
                <StackPanel>
                    <TextBlock Text="Email:"/>
                    <TextBox Text="{Binding Email}" Watermark="Введите email"/>
                </StackPanel>
                
                <!-- Phone -->
                <StackPanel>
                    <TextBlock Text="Телефон:"/>
                    <TextBox Text="{Binding PhoneNumber}" Watermark="Введите телефон (необязательно)"/>
                </StackPanel>
                
                <!-- Birth Date -->
                <StackPanel>
                    <TextBlock Text="Дата рождения:"/>
                    <DatePicker SelectedDate="{Binding BirthDate}"/>
                </StackPanel>
                
                <!-- Address -->
                <StackPanel>
                    <TextBlock Text="Адрес:"/>
                    <TextBox Text="{Binding Address}" Watermark="Введите адрес (необязательно)"/>
                </StackPanel>
                
                <!-- Group -->
                <StackPanel>
                    <TextBlock Text="Группа:"/>
                    <ComboBox ItemsSource="{Binding Groups}"
                              SelectedItem="{Binding SelectedGroup}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Status -->
                <StackPanel>
                    <TextBlock Text="Статус:"/>
                    <ComboBox SelectedItem="{Binding Status}">
                        <ComboBox.Items>
                            <models:StudentStatus>Active</models:StudentStatus>
                            <models:StudentStatus>Inactive</models:StudentStatus>
                            <models:StudentStatus>Graduated</models:StudentStatus>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button x:Name="CancelButton" Content="Отмена"/>
            <Button x:Name="SaveButton" Content="Сохранить" IsEnabled="{Binding IsValid}"/>
        </StackPanel>
    </Grid>
</Window> 