<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ViridiscaUi.ViewModels.Education"
             xmlns:domain="clr-namespace:ViridiscaUi.Domain.Models.Education;assembly=ViridiscaUi.Domain"
             xmlns:local="clr-namespace:ViridiscaUi.Converters"
             xmlns:material="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1200"
             x:Class="ViridiscaUi.Views.Education.GradesView"
             x:DataType="vm:GradesViewModel">

    <UserControl.Resources>
        <local:EnumEqualityConverter x:Key="EnumEqualityConverter" />
    </UserControl.Resources>
        
    <UserControl.Styles>
        <!-- Modern Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000" />
        </Style>
        
        <!-- Action Button Style -->
        <Style Selector="Button.action">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <!-- Primary Action Button -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        
        <!-- Secondary Action Button -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        </Style>
        
        <!-- Danger Action Button -->
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#E74C3C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        
        <!-- Filter Panel Style -->
        <Style Selector="StackPanel.filter-panel">
            <Setter Property="Spacing" Value="8" />
            <Setter Property="MinWidth" Value="120" />
        </Style>
        
        <!-- Status Badge Style -->
        <Style Selector="Border.status-badge">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        
        <!-- Grade Badge Style -->
        <Style Selector="Border.grade-badge">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="MinWidth" Value="60" />
        </Style>
    </UserControl.Styles>

    <Design.DataContext>
        <vm:GradesViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="16">
        
        <!-- Header Section with Actions -->
        <Border Grid.Row="0" Classes="card" Padding="20" Margin="0,0,0,16">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                
                <!-- Title and Statistics -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <material:MaterialIcon Kind="School" 
                                               Width="28" Height="28" 
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource SystemAccentColor}"/>
                    <TextBlock Text="Управление оценками" 
                               FontSize="28" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    
                    <!-- Statistics Badges -->
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Border Background="{DynamicResource SystemAccentColor}" 
                                CornerRadius="16" Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="School" 
                                                           Width="16" Height="16" 
                                                           Foreground="White"/>
                                <TextBlock Text="{Binding TotalGrades, StringFormat='{}{0} всего'}" 
                                           Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#4CAF50" 
                                CornerRadius="16" Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="CheckCircle" 
                                                           Width="16" Height="16" 
                                                           Foreground="White"/>
                                <TextBlock Text="{Binding PassingGrades, StringFormat='{}{0} зачтено'}" 
                                           Foreground="White" 
                                           FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FF9800" 
                                CornerRadius="16" Padding="12,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="TrendingUp" 
                                                           Width="16" Height="16" 
                                                           Foreground="White"/>
                                <TextBlock Text="{Binding AverageGrade, StringFormat='{}{0:F1} средний'}" 
                                           Foreground="White" 
                                           FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="0" Grid.Column="1" 
                            Orientation="Horizontal" Spacing="12">
                    <Button Command="{Binding AddGradeCommand}"
                            Classes="action primary">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="Plus" 
                                                       Width="18" Height="18"/>
                            <TextBlock Text="Добавить оценку"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding BulkGradeCommand}" 
                            Classes="action secondary">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="FormatListBulleted" 
                                                       Width="18" Height="18"/>
                            <TextBlock Text="Массовое оценивание"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportGradesCommand}" 
                            Classes="action secondary">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="Export" 
                                                       Width="18" Height="18"/>
                            <TextBlock Text="Экспорт"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RefreshCommand}" 
                            Classes="action secondary">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <material:MaterialIcon Kind="Refresh" 
                                                       Width="18" Height="18"/>
                            <TextBlock Text="Обновить"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Advanced Search -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0">
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="8" Padding="16">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding SearchText}" 
                                     Watermark="Поиск по студенту, заданию, курсу или преподавателю..."
                                     FontSize="14"
                                     Padding="12,10">
                                <TextBox.InnerLeftContent>
                                    <material:MaterialIcon Kind="Magnify" 
                                                               Width="20" Height="20" 
                                                               Margin="12,0,8,0"
                                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                </TextBox.InnerLeftContent>
                                <TextBox.InnerRightContent>
                                    <Button Command="{Binding ClearFiltersCommand}"
                                            IsVisible="{Binding SearchText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="8"
                                            Margin="0,0,8,0">
                                        <material:MaterialIcon Kind="Close" 
                                                                   Width="16" Height="16"/>
                                    </Button>
                                </TextBox.InnerRightContent>
                            </TextBox>
                            
                            <!-- Loading Indicator -->
                            <ProgressBar Grid.Column="1"
                                         IsIndeterminate="True"
                                         IsVisible="{Binding IsLoading}"
                                         Width="24" Height="24"
                                         Margin="12,0"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Advanced Filters -->
                <ScrollViewer Grid.Row="2" Grid.ColumnSpan="2" 
                              Margin="0,16,0,0"
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        
                        <!-- Course Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="Курс:" FontWeight="SemiBold" FontSize="13"/>
                            <ComboBox SelectedItem="{Binding SelectedCourseFilter}" 
                                      ItemsSource="{Binding Courses}"
                                      DisplayMemberBinding="{Binding Name}"
                                      PlaceholderText="Все курсы"
                                      MinWidth="180">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <material:MaterialIcon Kind="BookOpenPageVariant" 
                                                                       Width="16" Height="16"/>
                                            <TextBlock Text="{Binding Name}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Assignment Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="Задание:" FontWeight="SemiBold" FontSize="13"/>
                            <ComboBox SelectedItem="{Binding SelectedAssignmentFilter}" 
                                      ItemsSource="{Binding Assignments}"
                                      DisplayMemberBinding="{Binding Title}"
                                      PlaceholderText="Все задания"
                                      MinWidth="180">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <material:MaterialIcon Kind="ClipboardText" 
                                                                       Width="16" Height="16"/>
                                            <TextBlock Text="{Binding Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Student Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="Студент:" FontWeight="SemiBold" FontSize="13"/>
                            <ComboBox SelectedItem="{Binding SelectedStudentFilter}" 
                                      ItemsSource="{Binding Students}"
                                      DisplayMemberBinding="{Binding FullName}"
                                      PlaceholderText="Все студенты"
                                      MinWidth="180">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <material:MaterialIcon Kind="Account" 
                                                                       Width="16" Height="16"/>
                                            <TextBlock Text="{Binding FullName}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Grade Range Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="Диапазон оценок:" FontWeight="SemiBold" FontSize="13"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <NumericUpDown Value="{Binding MinGradeFilter}" 
                                               Minimum="0" Maximum="100"
                                               Watermark="От"
                                               Width="80"/>
                                <NumericUpDown Value="{Binding MaxGradeFilter}" 
                                               Minimum="0" Maximum="100"
                                               Watermark="До"
                                               Width="80"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Grade Status Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="Статус:" FontWeight="SemiBold" FontSize="13"/>
                            <ComboBox SelectedItem="{Binding GradeStatusFilter}" 
                                      PlaceholderText="Все статусы"
                                      MinWidth="150">
                                <ComboBoxItem Content="Все"/>
                                <ComboBoxItem Content="Зачтено"/>
                                <ComboBoxItem Content="Не зачтено"/>
                                <ComboBoxItem Content="Отлично"/>
                                <ComboBoxItem Content="Хорошо"/>
                                <ComboBoxItem Content="Удовлетворительно"/>
                                <ComboBoxItem Content="Неудовлетворительно"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Date Range Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="Дата оценки:" FontWeight="SemiBold" FontSize="13"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <DatePicker SelectedDate="{Binding GradeDateFrom}" 
                                            Width="120"/>
                                <DatePicker SelectedDate="{Binding GradeDateTo}" 
                                            Width="120"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Page Size Filter -->
                        <StackPanel Classes="filter-panel">
                            <TextBlock Text="На странице:" FontWeight="SemiBold" FontSize="13"/>
                            <ComboBox SelectedItem="{Binding PageSize}" MinWidth="100">
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="15"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                                <ComboBoxItem Content="100"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Clear Filters Button -->
                        <StackPanel Classes="filter-panel" VerticalAlignment="Bottom">
                            <Button Command="{Binding ClearFiltersCommand}"
                                    Classes="action secondary">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <material:MaterialIcon Kind="FilterRemove" 
                                                               Width="16" Height="16"/>
                                    <TextBlock Text="Очистить"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Classes="card" Padding="0">
            <Grid RowDefinitions="Auto,*">
                
                <!-- Bulk Actions Toolbar -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        Padding="16,12"
                        IsVisible="{Binding HasSelectedGrades}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{Binding SelectedGradesCount, StringFormat='Выбрано: {0}'}" 
                                   VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Button Command="{Binding BulkEditGradesCommand}" Classes="action secondary">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="Pencil" 
                                                           Width="16" Height="16"/>
                                <TextBlock Text="Редактировать"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding BulkApproveCommand}" Classes="action primary">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="CheckCircle" 
                                                           Width="16" Height="16"/>
                                <TextBlock Text="Утвердить"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding BulkRejectCommand}" Classes="action danger">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="CloseCircle" 
                                                           Width="16" Height="16"/>
                                <TextBlock Text="Отклонить"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding BulkExportCommand}" Classes="action secondary">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <material:MaterialIcon Kind="Export" 
                                                           Width="16" Height="16"/>
                                <TextBlock Text="Экспорт"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- Enhanced DataGrid -->
                <ScrollViewer Grid.Row="1" 
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <DataGrid ItemsSource="{Binding Grades}" 
                              SelectedItem="{Binding SelectedGrade}"
                              SelectionMode="Extended"
                              IsReadOnly="False" 
                              GridLinesVisibility="Horizontal"
                              AutoGenerateColumns="False" 
                              CanUserReorderColumns="True"
                              CanUserResizeColumns="True" 
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              MinWidth="1600">
                        
                        <DataGrid.Columns>
                            <!-- Selection Checkbox -->
                            <DataGridCheckBoxColumn Header="" Width="50" CanUserResize="False">
                                <DataGridCheckBoxColumn.Binding>
                                    <Binding Path="IsSelected" Mode="TwoWay"/>
                                </DataGridCheckBoxColumn.Binding>
                            </DataGridCheckBoxColumn>
                            
                            <!-- Student Info -->
                            <DataGridTemplateColumn Header="Студент" Width="2*" MinWidth="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="8">
                                            <!-- Student Avatar -->
                                            <Border Width="40" Height="40" 
                                                    CornerRadius="20"
                                                    Background="{DynamicResource SystemControlBackgroundAccentBrush}">
                                                <TextBlock Text="{Binding StudentInitials}" 
                                                           Foreground="{DynamicResource SystemAccentColorDark1}"
                                                           FontWeight="Bold" FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Student Details -->
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StudentName}" 
                                                           FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding StudentGroup}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Assignment -->
                            <DataGridTemplateColumn Header="Задание" Width="2*" MinWidth="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="8" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding AssignmentTitle}" 
                                                       FontWeight="SemiBold" FontSize="13"/>
                                            <TextBlock Text="{Binding CourseName}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource SystemAccentColor}"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Grade -->
                            <DataGridTemplateColumn Header="Оценка" Width="*" MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Classes="grade-badge">
                                            <Border.Background>
                                                <MultiBinding Converter="{StaticResource EnumEqualityConverter}">
                                                    <Binding Path="Score"/>
                                                    <Binding Source="80"/>
                                                    <Binding Source="#4CAF50"/>
                                                    <Binding Source="#FF9800"/>
                                                </MultiBinding>
                                            </Border.Background>
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Score}" 
                                                           Foreground="White"
                                                           FontWeight="Bold" FontSize="16"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding MaxScore, StringFormat='из {0}'}" 
                                                           Foreground="White"
                                                           FontSize="10"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Percentage -->
                            <DataGridTemplateColumn Header="Процент" Width="*" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Classes="status-badge"
                                                Background="{Binding PercentageColor}">
                                            <TextBlock Text="{Binding Percentage, StringFormat='{}{0:F1}%'}" 
                                                       Foreground="White"
                                                       FontWeight="SemiBold" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Letter Grade -->
                            <DataGridTemplateColumn Header="Буквенная" Width="*" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Classes="status-badge"
                                                Background="{Binding LetterGradeColor}">
                                            <TextBlock Text="{Binding LetterGrade}" 
                                                       Foreground="White"
                                                       FontWeight="Bold" FontSize="14"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Status -->
                            <DataGridTemplateColumn Header="Статус" Width="*" MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Classes="status-badge"
                                                Background="{Binding StatusColor}">
                                            <TextBlock Text="{Binding StatusDisplayName}" 
                                                       Foreground="White"
                                                       FontWeight="SemiBold" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Graded Date -->
                            <DataGridTemplateColumn Header="Дата оценки" Width="*" MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding GradedAt, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                                       FontWeight="SemiBold" FontSize="13"/>
                                            <TextBlock Text="{Binding GradedAt, StringFormat='{}{0:HH:mm}'}" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Graded By -->
                            <DataGridTemplateColumn Header="Оценил" Width="*" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="8">
                                            <Border Width="32" Height="32" 
                                                    CornerRadius="16"
                                                    Background="{DynamicResource SystemControlBackgroundAccentBrush}">
                                                <TextBlock Text="{Binding GradedByInitials}" 
                                                           Foreground="{DynamicResource SystemAccentColorDark1}"
                                                           FontWeight="Bold" FontSize="12"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{Binding GradedByName}" 
                                                       FontWeight="SemiBold" FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Actions -->
                            <DataGridTemplateColumn Header="Действия" Width="Auto" MinWidth="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="8">
                                            <Button Command="{Binding $parent[DataGrid].((vm:GradesViewModel)DataContext).ViewGradeDetailsCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="action secondary"
                                                    Padding="8,4">
                                                <material:MaterialIcon Kind="Eye" 
                                                                           Width="16" Height="16"/>
                                            </Button>
                                            <Button Command="{Binding $parent[DataGrid].((vm:GradesViewModel)DataContext).EditGradeCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="action secondary"
                                                    Padding="8,4">
                                                <material:MaterialIcon Kind="Pencil" 
                                                                           Width="16" Height="16"/>
                                            </Button>
                                            <Button Command="{Binding $parent[DataGrid].((vm:GradesViewModel)DataContext).ViewSubmissionCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="action secondary"
                                                    Padding="8,4">
                                                <material:MaterialIcon Kind="FileDocument" 
                                                                           Width="16" Height="16"/>
                                            </Button>
                                            <Button Command="{Binding $parent[DataGrid].((vm:GradesViewModel)DataContext).DeleteGradeCommand}"
                                                    CommandParameter="{Binding}"
                                                    Classes="action danger"
                                                    Padding="8,4">
                                                <material:MaterialIcon Kind="Delete" 
                                                                           Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination and Status Bar -->
        <Border Grid.Row="2" Classes="card" Padding="16" Margin="0,16,0,0">
            <Grid ColumnDefinitions="*,Auto,*">
                
                <!-- Status Information -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                    <TextBlock Text="{Binding PaginationInfo}" 
                               FontSize="14" 
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    <Border Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                            CornerRadius="12" Padding="8,4"
                            IsVisible="{Binding IsLoading}">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <ProgressBar IsIndeterminate="True" Width="16" Height="16"/>
                            <TextBlock Text="Загрузка..." FontSize="12" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Pagination Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center"
                            IsVisible="{Binding HasPages}">
                    <Button Command="{Binding FirstPageCommand}" 
                            Classes="action secondary"
                            IsEnabled="{Binding CanGoToFirstPage}">
                        <material:MaterialIcon Kind="ChevronDoubleLeft" 
                                                   Width="16" Height="16"/>
                    </Button>
                    <Button Command="{Binding PreviousPageCommand}" 
                            Classes="action secondary"
                            IsEnabled="{Binding CanGoToPreviousPage}">
                        <material:MaterialIcon Kind="ChevronLeft" 
                                                   Width="16" Height="16"/>
                    </Button>
                    
                    <!-- Page Numbers -->
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Страница" VerticalAlignment="Center" Margin="8,0"/>
                        <NumericUpDown Value="{Binding CurrentPage}" 
                                       Minimum="1" 
                                       Maximum="{Binding TotalPages}"
                                       Width="80"
                                       ShowButtonSpinner="False"/>
                        <TextBlock Text="{Binding TotalPages, StringFormat='из {0}'}" 
                                   VerticalAlignment="Center" Margin="8,0"/>
                    </StackPanel>
                    
                    <Button Command="{Binding NextPageCommand}" 
                            Classes="action secondary"
                            IsEnabled="{Binding CanGoToNextPage}">
                        <material:MaterialIcon Kind="ChevronRight" 
                                                   Width="16" Height="16"/>
                    </Button>
                    <Button Command="{Binding LastPageCommand}" 
                            Classes="action secondary"
                            IsEnabled="{Binding CanGoToLastPage}">
                        <material:MaterialIcon Kind="ChevronDoubleRight" 
                                                   Width="16" Height="16"/>
                    </Button>
                </StackPanel>
                
                <!-- Quick Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Command="{Binding SelectAllCommand}" Classes="action secondary">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <material:MaterialIcon Kind="SelectAll" 
                                                       Width="16" Height="16"/>
                            <TextBlock Text="Выбрать все"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding DeselectAllCommand}" Classes="action secondary">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <material:MaterialIcon Kind="SelectOff" 
                                                       Width="16" Height="16"/>
                            <TextBlock Text="Снять выделение"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl> 
