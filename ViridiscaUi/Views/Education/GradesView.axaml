<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ViridiscaUi.ViewModels.Education"
             xmlns:domain="clr-namespace:ViridiscaUi.Domain.Models.Education;assembly=ViridiscaUi.Domain"
             xmlns:local="clr-namespace:ViridiscaUi.Converters"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1200"
             x:Class="ViridiscaUi.Views.Education.GradesView"
             x:DataType="vm:GradesViewModel">

    <UserControl.Resources>
        <local:EnumEqualityConverter x:Key="EnumEqualityConverter" />
        <local:GradeColorConverter x:Key="GradeColorConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:GradesViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="3*,2*" Margin="16">
        
        <!-- Заголовок и панель управления -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                
                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="📊" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="Управление оценками" 
                               FontSize="24" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource SystemAccentColor}" 
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding TotalGrades, StringFormat='{}{0} оценок'}" 
                                   Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                    <Border Background="{DynamicResource SystemControlBackgroundAltMediumBrush}" 
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding AverageGrade, StringFormat='Средний балл: {0:F2}'}" 
                                   FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="0" Grid.Column="1" 
                            Orientation="Horizontal" Spacing="8">
                    <Button Content="➕ Добавить оценку" 
                            Command="{Binding CreateGradeCommand}"
                            Classes="accent" Padding="12,8"/>
                    <Button Content="📝 Массовое оценивание" 
                            Command="{Binding BulkGradingCommand}"
                            Padding="12,8"/>
                    <Button Content="📊 Экспорт отчета" 
                            Command="{Binding ExportReportCommand}"
                            Padding="12,8"/>
                    <Button Content="🔄 Обновить" 
                            Command="{Binding RefreshCommand}"
                            Padding="12,8"/>
                </StackPanel>

                <!-- Поиск -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Watermark="🔍 Поиск по студенту, курсу или заданию..."
                             MinWidth="400"/>
                </Grid>

                <!-- Фильтры -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0"
                      ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto,*">
                    
                    <!-- Курс -->
                    <TextBlock Grid.Column="0" Text="Курс:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding Courses}"
                              SelectedItem="{Binding SelectedCourseFilter}"
                              MinWidth="200" Margin="0,0,16,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <!-- Группа -->
                    <TextBlock Grid.Column="2" Text="Группа:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="3" 
                              ItemsSource="{Binding Groups}"
                              SelectedItem="{Binding SelectedGroupFilter}"
                              MinWidth="150" Margin="0,0,16,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <!-- Диапазон оценок -->
                    <TextBlock Grid.Column="4" Text="Оценка:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="5" SelectedItem="{Binding GradeRangeFilter}" 
                              MinWidth="120" Margin="0,0,16,0">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="5 (Отлично)"/>
                        <ComboBoxItem Content="4 (Хорошо)"/>
                        <ComboBoxItem Content="3 (Удовл.)"/>
                        <ComboBoxItem Content="2 (Неудовл.)"/>
                        <ComboBoxItem Content="Не оценено"/>
                    </ComboBox>
                    
                    <!-- Период -->
                    <TextBlock Grid.Column="6" Text="Период:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="7" SelectedItem="{Binding PeriodFilter}" 
                              MinWidth="120">
                        <ComboBoxItem Content="Все время"/>
                        <ComboBoxItem Content="Сегодня"/>
                        <ComboBoxItem Content="Эта неделя"/>
                        <ComboBoxItem Content="Этот месяц"/>
                        <ComboBoxItem Content="Этот семестр"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Border>

        <!-- Список оценок -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="0" Margin="0,0,8,0">
            <Grid RowDefinitions="*,Auto">
                
                <!-- DataGrid с оценками -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding Grades}" 
                          SelectedItem="{Binding SelectedGrade}"
                          IsReadOnly="True" GridLinesVisibility="Horizontal"
                          AutoGenerateColumns="False" CanUserReorderColumns="True"
                          CanUserResizeColumns="True" CanUserSortColumns="True">
                    
                    <DataGrid.Columns>
                        <!-- Студент -->
                        <DataGridTextColumn Header="Студент" 
                                            Binding="{Binding StudentName}" 
                                            Width="200" FontWeight="SemiBold"/>
                        
                        <!-- Курс -->
                        <DataGridTextColumn Header="Курс" 
                                            Binding="{Binding CourseName}" 
                                            Width="180"/>
                        
                        <!-- Задание -->
                        <DataGridTextColumn Header="Задание" 
                                            Binding="{Binding AssignmentTitle}" 
                                            Width="200"/>
                        
                        <!-- Оценка -->
                        <DataGridTemplateColumn Header="Оценка" 
                                                Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Grade, Converter={StaticResource GradeColorConverter}}" 
                                            CornerRadius="16" Padding="12,6"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding GradeDisplay}" 
                                                   Foreground="White"
                                                   FontWeight="Bold" FontSize="14"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Максимальный балл -->
                        <DataGridTextColumn Header="Макс. балл" 
                                            Binding="{Binding MaxGrade}" 
                                            Width="90"/>
                        
                        <!-- Процент -->
                        <DataGridTemplateColumn Header="%" 
                                                Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Percentage, StringFormat='{}{0:F0}%'}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Дата оценивания -->
                        <DataGridTextColumn Header="Дата оценки" 
                                            Binding="{Binding GradedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                            Width="140"/>
                        
                        <!-- Преподаватель -->
                        <DataGridTextColumn Header="Преподаватель" 
                                            Binding="{Binding GradedByName}" 
                                            Width="150"/>
                        
                        <!-- Действия -->
                        <DataGridTemplateColumn Header="Действия" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="vm:GradeViewModel">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button Content="👁" ToolTip.Tip="Просмотр деталей"
                                                Command="{Binding $parent[DataGrid].DataContext.ViewGradeDetailsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="✏️" ToolTip.Tip="Редактировать"
                                                Command="{Binding $parent[DataGrid].DataContext.EditGradeCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="📝" ToolTip.Tip="Добавить комментарий"
                                                Command="{Binding $parent[DataGrid].DataContext.AddCommentCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="🗑️" ToolTip.Tip="Удалить"
                                                Command="{Binding $parent[DataGrid].DataContext.DeleteGradeCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"
                                                Classes="danger"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Пагинация -->
                <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                        Padding="16,8">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <Button Content="⏮️" Command="{Binding GoToPageCommand}" CommandParameter="1"
                                    IsEnabled="{Binding CanGoToPreviousPage}" Padding="8,4"/>
                            <Button Content="⏪" Command="{Binding PreviousPageCommand}"
                                    IsEnabled="{Binding CanGoToPreviousPage}" Padding="8,4"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Страница" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentPage}" Width="60" 
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Text="{Binding TotalPages, StringFormat='из {0}'}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button Content="⏩" Command="{Binding NextPageCommand}"
                                    IsEnabled="{Binding CanGoToNextPage}" Padding="8,4"/>
                            <Button Content="⏭️" Command="{Binding GoToPageCommand}" CommandParameter="{Binding TotalPages}"
                                    IsEnabled="{Binding CanGoToNextPage}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Панель деталей и статистики -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="16">
            <ScrollViewer>
                <StackPanel Spacing="16">
                    
                    <!-- Детали выбранной оценки -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12"
                            IsVisible="{Binding HasSelectedGrade}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📋 Детали оценки" 
                                       FontWeight="SemiBold" FontSize="16"/>
                            
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Студент:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedGrade.StudentName}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Курс:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedGrade.CourseName}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Задание:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedGrade.AssignmentTitle}"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Оценка:" FontWeight="SemiBold"/>
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                    <Border Background="{Binding SelectedGrade.Grade, Converter={StaticResource GradeColorConverter}}" 
                                            CornerRadius="12" Padding="8,4">
                                        <TextBlock Text="{Binding SelectedGrade.GradeDisplay}" 
                                                   Foreground="White" FontWeight="Bold"/>
                                    </Border>
                                    <TextBlock Text="{Binding SelectedGrade.Percentage, StringFormat='({0:F0}%)'}" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" 
                                           Text="{Binding SelectedGrade.GradedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Преподаватель:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedGrade.GradedByName}"/>
                            </Grid>
                            
                            <!-- Комментарий -->
                            <Border Background="{DynamicResource SystemControlBackgroundAltMediumBrush}" 
                                    CornerRadius="8" Padding="12" Margin="0,8,0,0"
                                    IsVisible="{Binding SelectedGrade.Comment, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="💬 Комментарий:" FontWeight="SemiBold" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedGrade.Comment}" 
                                               TextWrapping="Wrap" FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Общая статистика -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="📊 Общая статистика" 
                                       FontWeight="SemiBold" FontSize="16"/>
                            
                            <!-- Распределение оценок -->
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                                <Border Grid.Row="0" Grid.Column="0"
                                        Background="#4CAF50" CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding ExcellentCount}" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Отлично (5)" FontSize="10" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Row="0" Grid.Column="1" 
                                        Background="#2196F3" CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding GoodCount}" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Хорошо (4)" FontSize="10" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Row="1" Grid.Column="0" 
                                        Background="#FF9800" CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SatisfactoryCount}" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Удовл. (3)" FontSize="10" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Row="1" Grid.Column="1" 
                                        Background="#F44336" CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding UnsatisfactoryCount}" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Неудовл. (2)" FontSize="10" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Средние показатели -->
                            <StackPanel Spacing="8">
                                <Grid ColumnDefinitions="*,Auto" Margin="0,4">
                                    <TextBlock Grid.Column="0" Text="Средний балл:" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding AverageGrade, StringFormat='{}{0:F2}'}" 
                                               FontWeight="Bold" FontSize="16"/>
                                </Grid>
                                <Grid ColumnDefinitions="*,Auto" Margin="0,4">
                                    <TextBlock Grid.Column="0" Text="Успеваемость:" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SuccessRate, StringFormat='{}{0:F1}%'}" 
                                               FontWeight="Bold" FontSize="16"/>
                                </Grid>
                                <Grid ColumnDefinitions="*,Auto" Margin="0,4">
                                    <TextBlock Grid.Column="0" Text="Качество знаний:" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding QualityRate, StringFormat='{}{0:F1}%'}" 
                                               FontWeight="Bold" FontSize="16"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Быстрые действия -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="⚡ Быстрые действия" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <StackPanel Spacing="4">
                                <Button Content="📝 Массовое оценивание" 
                                        Command="{Binding BulkGradingCommand}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📊 Экспорт в Excel" 
                                        Command="{Binding ExportToExcelCommand}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📈 Аналитический отчет" 
                                        Command="{Binding GenerateAnalyticsReportCommand}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="🔔 Уведомить родителей" 
                                        Command="{Binding NotifyParentsCommand}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Opacity="0.8" IsVisible="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Загрузка оценок..." 
                           HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 