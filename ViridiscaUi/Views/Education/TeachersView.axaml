<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ViridiscaUi.ViewModels.Education"
             xmlns:domain="clr-namespace:ViridiscaUi.Domain.Models.Education;assembly=ViridiscaUi.Domain"
             xmlns:local="clr-namespace:ViridiscaUi.Converters"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1200"
             x:Class="ViridiscaUi.Views.Education.TeachersView"
             x:DataType="vm:TeachersViewModel">

    <UserControl.Resources>
        <local:EnumEqualityConverter x:Key="EnumEqualityConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:TeachersViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="2*,*" Margin="16">
        
        <!-- Заголовок и панель управления -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                
                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="👨‍🏫" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="Управление преподавателями" 
                               FontSize="24" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource SystemAccentColor}" 
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding TotalTeachers, StringFormat='{}{0} преподавателей'}" 
                                   Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="0" Grid.Column="1" 
                            Orientation="Horizontal" Spacing="8">
                    <Button Content="➕ Добавить преподавателя" 
                            Command="{Binding CreateTeacherCommand}"
                            Classes="accent" Padding="12,8"/>
                    <Button Content="🔄 Обновить" 
                            Command="{Binding RefreshCommand}"
                            Padding="12,8"/>
                    <Button Content="🧹 Очистить фильтры" 
                            Command="{Binding ClearFiltersCommand}"
                            Padding="12,8"/>
                </StackPanel>

                <!-- Поиск -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Watermark="🔍 Поиск преподавателей по имени, email или специализации..."
                             MinWidth="400"/>
                </Grid>

                <!-- Фильтры -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0"
                      ColumnDefinitions="Auto,*,Auto,*,Auto,*">
                    
                    <!-- Специализация -->
                    <TextBlock Grid.Column="0" Text="Специализация:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" SelectedItem="{Binding SpecializationFilter}" 
                              MinWidth="200" Margin="0,0,16,0">
                        <ComboBoxItem Content="Все специализации"/>
                        <ComboBoxItem Content="Математика"/>
                        <ComboBoxItem Content="Физика"/>
                        <ComboBoxItem Content="Информатика"/>
                        <ComboBoxItem Content="Химия"/>
                        <ComboBoxItem Content="Биология"/>
                        <ComboBoxItem Content="История"/>
                        <ComboBoxItem Content="Литература"/>
                        <ComboBoxItem Content="Иностранные языки"/>
                    </ComboBox>
                    
                    <!-- Статус активности -->
                    <TextBlock Grid.Column="2" Text="Статус:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="3" SelectedItem="{Binding StatusFilter}" 
                              MinWidth="150" Margin="0,0,16,0">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="✅ Активные"/>
                        <ComboBoxItem Content="⏸️ Неактивные"/>
                    </ComboBox>
                    
                    <!-- Размер страницы -->
                    <TextBlock Grid.Column="4" Text="Размер страницы:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="5" SelectedItem="{Binding PageSize}" 
                              Width="80">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="15"/>
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Border>

        <!-- Список преподавателей -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="0" Margin="0,0,8,0">
            <Grid RowDefinitions="*,Auto">
                
                <!-- DataGrid с преподавателями -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding Teachers}" 
                          SelectedItem="{Binding SelectedTeacher}"
                          IsReadOnly="True" GridLinesVisibility="Horizontal"
                          AutoGenerateColumns="False" CanUserReorderColumns="True"
                          CanUserResizeColumns="True" CanUserSortColumns="True">
                    
                    <DataGrid.Columns>
                        <!-- ФИО -->
                        <DataGridTextColumn Header="ФИО" 
                                            Binding="{Binding FullName}" 
                                            Width="250" FontWeight="SemiBold"/>
                        
                        <!-- Email -->
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="200"/>
                        
                        <!-- Телефон -->
                        <DataGridTextColumn Header="Телефон" 
                                            Binding="{Binding Phone}" 
                                            Width="140"/>
                        
                        <!-- Специализация -->
                        <DataGridTextColumn Header="Специализация" 
                                            Binding="{Binding Specialization}" 
                                            Width="160"/>
                        
                        <!-- Курсов ведет -->
                        <DataGridTemplateColumn Header="Курсов" 
                                                Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SystemAccentColorLight3}" 
                                            CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding CoursesCount}" 
                                                   Foreground="{DynamicResource SystemAccentColorDark1}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Групп курирует -->
                        <DataGridTemplateColumn Header="Групп" 
                                                Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                                            CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding CuratedGroupsCount}" 
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Действия -->
                        <DataGridTemplateColumn Header="Действия" Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="vm:TeacherViewModel">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button Content="👁" ToolTip.Tip="Просмотр профиля"
                                                Command="{Binding $parent[DataGrid].DataContext.ViewTeacherDetailsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="✏️" ToolTip.Tip="Редактировать"
                                                Command="{Binding $parent[DataGrid].DataContext.EditTeacherCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="📚" ToolTip.Tip="Управление курсами"
                                                Command="{Binding $parent[DataGrid].DataContext.ManageCoursesCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="👥" ToolTip.Tip="Управление группами"
                                                Command="{Binding $parent[DataGrid].DataContext.ManageGroupsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="📊" ToolTip.Tip="Статистика"
                                                Command="{Binding $parent[DataGrid].DataContext.ViewStatisticsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="🗑️" ToolTip.Tip="Удалить"
                                                Command="{Binding $parent[DataGrid].DataContext.DeleteTeacherCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"
                                                Classes="danger"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Пагинация -->
                <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                        Padding="16,8">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <Button Content="⏮️" Command="{Binding GoToPageCommand}" CommandParameter="1"
                                    IsEnabled="{Binding CanGoToPreviousPage}" Padding="8,4"/>
                            <Button Content="⏪" Command="{Binding PreviousPageCommand}"
                                    IsEnabled="{Binding CanGoToPreviousPage}" Padding="8,4"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Страница" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentPage}" Width="60" 
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Text="{Binding TotalPages, StringFormat='из {0}'}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button Content="⏩" Command="{Binding NextPageCommand}"
                                    IsEnabled="{Binding CanGoToNextPage}" Padding="8,4"/>
                            <Button Content="⏭️" Command="{Binding GoToPageCommand}" CommandParameter="{Binding TotalPages}"
                                    IsEnabled="{Binding CanGoToNextPage}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Панель деталей преподавателя -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="16"
                IsVisible="{Binding HasSelectedTeacher}">
            <ScrollViewer>
                <StackPanel Spacing="16">
                    <!-- Заголовок панели деталей -->
                    <TextBlock Text="📋 Детали преподавателя" 
                               FontSize="18" FontWeight="Bold"/>
                    
                    <!-- Основная информация -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="👤 Основная информация" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding SelectedTeacher.FullName}" 
                                       FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedTeacher.Email}"/>
                            <TextBlock Text="{Binding SelectedTeacher.Phone}"/>
                            <TextBlock Text="{Binding SelectedTeacher.Specialization}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Биография -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12"
                            IsVisible="{Binding SelectedTeacher.Bio, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📝 Биография" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding SelectedTeacher.Bio}" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Статистика -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📊 Статистика" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                                <Border Grid.Row="0" Grid.Column="0" 
                                        Background="{DynamicResource SystemAccentColorLight3}" 
                                        CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedTeacher.CoursesCount}" 
                                                   FontSize="24" FontWeight="Bold" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Курсов" FontSize="12" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" 
                                        Background="{DynamicResource SystemControlBackgroundAltMediumBrush}" 
                                        CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedTeacher.CuratedGroupsCount}" 
                                                   FontSize="24" FontWeight="Bold" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Групп" FontSize="12" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Быстрые действия -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="⚡ Быстрые действия" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <StackPanel Spacing="4">
                                <Button Content="✏️ Редактировать профиль" 
                                        Command="{Binding EditTeacherCommand}"
                                        CommandParameter="{Binding SelectedTeacher}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📚 Управление курсами" 
                                        Command="{Binding ManageCoursesCommand}"
                                        CommandParameter="{Binding SelectedTeacher}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="👥 Управление группами" 
                                        Command="{Binding ManageGroupsCommand}"
                                        CommandParameter="{Binding SelectedTeacher}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📊 Подробная статистика" 
                                        Command="{Binding ViewStatisticsCommand}"
                                        CommandParameter="{Binding SelectedTeacher}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Opacity="0.8" IsVisible="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Загрузка преподавателей..." 
                           HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 