<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ViridiscaUi.ViewModels.Education"
             xmlns:domain="clr-namespace:ViridiscaUi.Domain.Models.Education;"
             xmlns:converters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             xmlns:local="clr-namespace:ViridiscaUi.Converters"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1200"
             x:Class="ViridiscaUi.Views.Education.CoursesView"
             x:DataType="vm:CoursesViewModel">

    <UserControl.Resources>
        <local:EnumEqualityConverter x:Key="EnumEqualityConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <vm:CoursesViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="2*,*" Margin="16">
        
        <!-- Заголовок и панель управления -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                
                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="📚" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="Управление курсами" 
                               FontSize="24" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource SystemAccentColor}" 
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding TotalCourses, StringFormat='{}{0} курсов'}" 
                                   Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                    <Border Background="{DynamicResource SystemControlBackgroundAltMediumBrush}" 
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding ActiveCourses, StringFormat='{}{0} активных'}" 
                                   FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="0" Grid.Column="1" 
                            Orientation="Horizontal" Spacing="8">
                    <Button Content="➕ Создать курс" 
                            Command="{Binding CreateCourseCommand}"
                            Classes="accent" Padding="12,8"/>
                    <Button Content="📋 Импорт курсов" 
                            Command="{Binding ImportCoursesCommand}"
                            Padding="12,8"/>
                    <Button Content="📊 Экспорт отчета" 
                            Command="{Binding ExportReportCommand}"
                            Padding="12,8"/>
                    <Button Content="🔄 Обновить" 
                            Command="{Binding RefreshCommand}"
                            Padding="12,8"/>
                </StackPanel>

                <!-- Поиск -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Watermark="🔍 Поиск курсов по названию, описанию или преподавателю..."
                             MinWidth="400"/>
                </Grid>

                <!-- Фильтры -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0"
                      ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto,*">
                    
                    <!-- Категория -->
                    <TextBlock Grid.Column="0" Text="Категория:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" SelectedItem="{Binding CategoryFilter}" 
                              MinWidth="180" Margin="0,0,16,0">
                        <ComboBoxItem Content="Все категории"/>
                        <ComboBoxItem Content="Математика"/>
                        <ComboBoxItem Content="Естественные науки"/>
                        <ComboBoxItem Content="Гуманитарные науки"/>
                        <ComboBoxItem Content="Информатика"/>
                        <ComboBoxItem Content="Языки"/>
                        <ComboBoxItem Content="Искусство"/>
                        <ComboBoxItem Content="Спорт"/>
                    </ComboBox>
                    
                    <!-- Статус -->
                    <TextBlock Grid.Column="2" Text="Статус:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="3" SelectedItem="{Binding StatusFilter}" 
                              MinWidth="150" Margin="0,0,16,0">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="✅ Активные"/>
                        <ComboBoxItem Content="⏸️ Приостановленные"/>
                        <ComboBoxItem Content="📝 Черновики"/>
                        <ComboBoxItem Content="🏁 Завершенные"/>
                    </ComboBox>
                    
                    <!-- Уровень сложности -->
                    <TextBlock Grid.Column="4" Text="Уровень:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="5" SelectedItem="{Binding DifficultyFilter}" 
                              MinWidth="120" Margin="0,0,16,0">
                        <ComboBoxItem Content="Все"/>
                        <ComboBoxItem Content="🟢 Начальный"/>
                        <ComboBoxItem Content="🟡 Средний"/>
                        <ComboBoxItem Content="🟠 Продвинутый"/>
                        <ComboBoxItem Content="🔴 Экспертный"/>
                    </ComboBox>
                    
                    <!-- Размер страницы -->
                    <TextBlock Grid.Column="6" Text="Размер страницы:" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="7" SelectedItem="{Binding PageSize}" 
                              Width="80">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="15"/>
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Border>

        <!-- Список курсов -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="0" Margin="0,0,8,0">
            <Grid RowDefinitions="*,Auto">
                
                <!-- DataGrid с курсами -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding Courses}" 
                          SelectedItem="{Binding SelectedCourse}"
                          IsReadOnly="True" GridLinesVisibility="Horizontal"
                          AutoGenerateColumns="False" CanUserReorderColumns="True"
                          CanUserResizeColumns="True" CanUserSortColumns="True">
                    
                    <DataGrid.Columns>
                        <!-- Название курса -->
                        <DataGridTextColumn Header="Название курса" 
                                            Binding="{Binding Name}" 
                                            Width="250" FontWeight="SemiBold"/>
                        
                        <!-- Код курса -->
                        <DataGridTextColumn Header="Код" 
                                            Binding="{Binding Code}" 
                                            Width="100"/>
                        
                        <!-- Категория -->
                        <DataGridTextColumn Header="Категория" 
                                            Binding="{Binding Category}" 
                                            Width="140"/>
                        
                        <!-- Преподаватель -->
                        <DataGridTextColumn Header="Преподаватель" 
                                            Binding="{Binding TeacherName}" 
                                            Width="180"/>
                        
                        <!-- Студентов -->
                        <DataGridTemplateColumn Header="Студентов" 
                                                Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SystemAccentColorLight3}" 
                                            CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding StudentsCount}" 
                                                   Foreground="{DynamicResource SystemAccentColorDark1}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Заданий -->
                        <DataGridTemplateColumn Header="Заданий" 
                                                Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                                            CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding AssignmentsCount}" 
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Статус -->
                        <DataGridTemplateColumn Header="Статус" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding StatusColor}" 
                                            CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding StatusDisplay}" 
                                                   Foreground="White" FontWeight="SemiBold" 
                                                   FontSize="11" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Действия -->
                        <DataGridTemplateColumn Header="Действия" Width="320">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="vm:CourseViewModel">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button Content="👁" ToolTip.Tip="Просмотр курса"
                                                Command="{Binding $parent[DataGrid].DataContext.ViewCourseDetailsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="✏️" ToolTip.Tip="Редактировать"
                                                Command="{Binding $parent[DataGrid].DataContext.EditCourseCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="📝" ToolTip.Tip="Управление контентом"
                                                Command="{Binding $parent[DataGrid].DataContext.ManageContentCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="👥" ToolTip.Tip="Управление студентами"
                                                Command="{Binding $parent[DataGrid].DataContext.ManageStudentsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="📊" ToolTip.Tip="Статистика"
                                                Command="{Binding $parent[DataGrid].DataContext.ViewStatisticsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="📋" ToolTip.Tip="Клонировать"
                                                Command="{Binding $parent[DataGrid].DataContext.CloneCourseCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="🗑️" ToolTip.Tip="Удалить"
                                                Command="{Binding $parent[DataGrid].DataContext.DeleteCourseCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"
                                                Classes="danger"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Пагинация -->
                <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                        Padding="16,8">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <Button Content="⏮️" Command="{Binding GoToPageCommand}" CommandParameter="1"
                                    IsEnabled="{Binding CanGoToPreviousPage}" Padding="8,4"/>
                            <Button Content="⏪" Command="{Binding PreviousPageCommand}"
                                    IsEnabled="{Binding CanGoToPreviousPage}" Padding="8,4"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Страница" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding CurrentPage}" Width="60" 
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Text="{Binding TotalPages, StringFormat='из {0}'}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button Content="⏩" Command="{Binding NextPageCommand}"
                                    IsEnabled="{Binding CanGoToNextPage}" Padding="8,4"/>
                            <Button Content="⏭️" Command="{Binding GoToPageCommand}" CommandParameter="{Binding TotalPages}"
                                    IsEnabled="{Binding CanGoToNextPage}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Панель деталей курса -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="16"
                IsVisible="{Binding HasSelectedCourse}">
            <ScrollViewer>
                <StackPanel Spacing="16">
                    <!-- Заголовок панели деталей -->
                    <TextBlock Text="📋 Детали курса" 
                               FontSize="18" FontWeight="Bold"/>
                    
                    <!-- Основная информация -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📚 Основная информация" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding SelectedCourse.Name}" 
                                       FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedCourse.Code}" 
                                       FontStyle="Italic"/>
                            <TextBlock Text="{Binding SelectedCourse.Category}"/>
                            <TextBlock Text="{Binding SelectedCourse.TeacherName}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Описание -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12"
                            IsVisible="{Binding SelectedCourse.Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📝 Описание" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding SelectedCourse.Description}" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Статистика -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📊 Статистика" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                                <Border Grid.Row="0" Grid.Column="0" 
                                        Background="{DynamicResource SystemAccentColorLight3}" 
                                        CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedCourse.StudentsCount}" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Студентов" FontSize="10" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" 
                                        Background="{DynamicResource SystemControlBackgroundAltMediumBrush}" 
                                        CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedCourse.AssignmentsCount}" 
                                                   FontSize="20" FontWeight="Bold" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Заданий" FontSize="10" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="0" 
                                        Background="#4CAF50" 
                                        CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedCourse.CompletionRate, StringFormat='{}{0:F0}%'}" 
                                                   FontSize="16" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Завершено" FontSize="10" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1" 
                                        Background="#2196F3" 
                                        CornerRadius="8" Padding="12">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedCourse.AverageGrade, StringFormat='{}{0:F1}'}" 
                                                   FontSize="16" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Средний балл" FontSize="10" 
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Быстрые действия -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="⚡ Быстрые действия" 
                                       FontWeight="SemiBold" FontSize="14"/>
                            <StackPanel Spacing="4">
                                <Button Content="✏️ Редактировать курс" 
                                        Command="{Binding EditCourseCommand}"
                                        CommandParameter="{Binding SelectedCourse}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📝 Управление контентом" 
                                        Command="{Binding ManageContentCommand}"
                                        CommandParameter="{Binding SelectedCourse}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="👥 Управление студентами" 
                                        Command="{Binding ManageStudentsCommand}"
                                        CommandParameter="{Binding SelectedCourse}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📊 Подробная статистика" 
                                        Command="{Binding ViewStatisticsCommand}"
                                        CommandParameter="{Binding SelectedCourse}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="📋 Клонировать курс" 
                                        Command="{Binding CloneCourseCommand}"
                                        CommandParameter="{Binding SelectedCourse}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Opacity="0.8" IsVisible="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Загрузка курсов..." 
                           HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Стили -->
    <UserControl.Styles>
        <Style Selector="Border.statistic-card">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#FF4444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF6666"/>
        </Style>
        
        <Style Selector="Button.warning">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.warning:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFB84D"/>
        </Style>
        
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>
</UserControl> 