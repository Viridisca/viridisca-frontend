<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ViridiscaUi.ViewModels.Education"
             xmlns:converters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1200"
             x:Class="ViridiscaUi.Views.Education.GroupsView"
             x:DataType="vm:GroupsViewModel">

    <Design.DataContext>
        <vm:GroupsViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="2*,*" Margin="16">
        
        <!-- Заголовок и панель действий -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                
                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="📚" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="Управление группами" 
                               FontSize="24" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Border Background="{DynamicResource SystemAccentColor}" 
                            CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding TotalGroups, StringFormat='{}{0} групп'}" 
                                   Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Row="0" Grid.Column="1" 
                            Orientation="Horizontal" Spacing="8">
                    <Button Content="➕ Создать группу" 
                            Command="{Binding CreateGroupCommand}"
                            Classes="accent" Padding="12,8"/>
                    <Button Content="🔄 Обновить" 
                            Command="{Binding RefreshCommand}"
                            Padding="12,8"/>
                </StackPanel>

                <!-- Поиск и фильтры -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0"
                      ColumnDefinitions="*,Auto,Auto">
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText}" 
                             Watermark="🔍 Поиск групп..."
                             MinWidth="300"/>
                    <TextBlock Grid.Column="1" Text="Размер страницы:" 
                               VerticalAlignment="Center" Margin="12,0,8,0"/>
                    <ComboBox Grid.Column="2" SelectedItem="{Binding PageSize}" 
                              Width="80">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="20"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </Grid>
            </Grid>
        </Border>

        <!-- Список групп -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="0" Margin="0,0,8,0">
            <Grid RowDefinitions="*,Auto">
                
                <!-- DataGrid с группами -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding Groups}" 
                          SelectedItem="{Binding SelectedGroup}"
                          IsReadOnly="True" GridLinesVisibility="Horizontal"
                          AutoGenerateColumns="False" CanUserReorderColumns="True"
                          CanUserResizeColumns="True" CanUserSortColumns="True">
                    
                    <DataGrid.Columns>
                        <!-- Название группы -->
                        <DataGridTextColumn Header="Название" 
                                            Binding="{Binding Name}" 
                                            Width="200" FontWeight="SemiBold"/>
                        
                        <!-- Описание -->
                        <DataGridTemplateColumn Header="Описание" 
                                                Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap" TextTrimming="None"
                                               MaxWidth="240"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Куратор -->
                        <DataGridTextColumn Header="Куратор" 
                                            Binding="{Binding CuratorName}" 
                                            Width="180"/>
                        
                        <!-- Количество студентов -->
                        <DataGridTemplateColumn Header="Студентов" 
                                                Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SystemAccentColorLight3}" 
                                            CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding StudentsCount}" 
                                                   Foreground="{DynamicResource SystemAccentColorDark1}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Дата создания -->
                        <DataGridTextColumn Header="Создана" 
                                            Binding="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                            Width="100"/>
                        
                        <!-- Действия -->
                        <DataGridTemplateColumn Header="Действия" Width="280">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="vm:GroupViewModel">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button Content="👁" ToolTip.Tip="Просмотр деталей"
                                                Command="{Binding $parent[DataGrid].DataContext.ViewGroupDetailsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="✏️" ToolTip.Tip="Редактировать"
                                                Command="{Binding $parent[DataGrid].DataContext.EditGroupCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="👨‍🎓" ToolTip.Tip="Управление студентами"
                                                Command="{Binding $parent[DataGrid].DataContext.ManageStudentsCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="👨‍🏫" ToolTip.Tip="Назначить куратора"
                                                Command="{Binding $parent[DataGrid].DataContext.AssignCuratorCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"/>
                                        <Button Content="🗑️" ToolTip.Tip="Удалить"
                                                Command="{Binding $parent[DataGrid].DataContext.DeleteGroupCommand}"
                                                CommandParameter="{Binding}" Padding="8,4" FontSize="12"
                                                Classes="danger"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Пагинация -->
                <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        Padding="16,8" BorderThickness="0,1,0,0" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                    <Grid ColumnDefinitions="*,Auto,*">
                        
                        <!-- Информация о страницах -->
                        <TextBlock Grid.Column="0" VerticalAlignment="Center">
                            <Run Text="Страница"/>
                            <Run Text="{Binding CurrentPage}" FontWeight="SemiBold"/>
                            <Run Text="из"/>
                            <Run Text="{Binding TotalPages}" FontWeight="SemiBold"/>
                            <Run Text="•"/>
                            <Run Text="{Binding TotalGroups}" FontWeight="SemiBold"/>
                            <Run Text="групп всего"/>
                        </TextBlock>

                        <!-- Навигация по страницам -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="⬅️ Предыдущая" 
                                    Command="{Binding PreviousPageCommand}" 
                                    Padding="12,6"/>
                            <TextBox Text="{Binding CurrentPage}" Width="60" 
                                     HorizontalContentAlignment="Center"/>
                            <Button Content="Следующая ➡️" 
                                    Command="{Binding NextPageCommand}" 
                                    Padding="12,6"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Панель деталей группы -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="8" Padding="16"
                IsVisible="{Binding HasSelectedGroup}">
            <ScrollViewer>
                <StackPanel Spacing="16">
                    
                    <!-- Заголовок деталей -->
                    <TextBlock Text="📋 Детали группы" FontSize="18" FontWeight="Bold"/>
                    
                    <!-- Информация о группе -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock FontWeight="SemiBold" FontSize="16">
                                <Run Text="📚"/>
                                <Run Text="{Binding SelectedGroup.Name}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding SelectedGroup.Description}" 
                                       TextWrapping="Wrap" TextTrimming="None"
                                       IsVisible="{Binding SelectedGroup.Description, Converter={x:Static converters:StringConverters.IsNotNullOrEmpty}}"/>
                            <TextBlock>
                                <Run Text="👨‍🏫 Куратор:"/>
                                <Run Text="{Binding SelectedGroup.CuratorName, TargetNullValue='не назначен'}" FontWeight="SemiBold"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="📅 Создана:"/>
                                <Run Text="{Binding SelectedGroup.CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Статистика группы -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="8" Padding="12"
                            IsVisible="{Binding HasSelectedGroupStatistics}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📊 Статистика" FontWeight="SemiBold" FontSize="14"/>
                            
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                                <!-- Всего групп -->
                                <Border Grid.Column="0" Grid.Row="0" Classes="statistic-card" Margin="0,0,4,4">
                                    <StackPanel>
                                        <TextBlock Text="👥 Всего групп" FontSize="12" Opacity="0.8"/>
                                        <TextBlock Text="{Binding Analytics.TotalGroups}" 
                                                   FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Активные группы -->
                                <Border Grid.Column="1" Grid.Row="0" Classes="statistic-card" Margin="4,0,0,4">
                                    <StackPanel>
                                        <TextBlock Text="🔥 Активные" FontSize="12" Opacity="0.8"/>
                                        <TextBlock Text="{Binding Analytics.ActiveGroups}" 
                                                   FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Всего студентов -->
                                <Border Grid.Column="0" Grid.Row="1" Classes="statistic-card" Margin="0,4,4,4">
                                    <StackPanel>
                                        <TextBlock Text="👨‍🎓 Всего студентов" FontSize="12" Opacity="0.8"/>
                                        <TextBlock Text="{Binding Analytics.TotalStudents}" 
                                                   FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Средний размер группы -->
                                <Border Grid.Column="1" Grid.Row="1" Classes="statistic-card" Margin="4,4,0,4">
                                    <StackPanel>
                                        <TextBlock Text="📊 Средний размер" FontSize="12" Opacity="0.8"/>
                                        <TextBlock Text="{Binding Analytics.AverageGroupSize, StringFormat='{}{0:F1}'}" 
                                                   FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Новые группы -->
                                <Border Grid.Column="0" Grid.Row="2" Classes="statistic-card" Margin="0,4,4,0">
                                    <StackPanel>
                                        <TextBlock Text="🆕 Новые (месяц)" FontSize="12" Opacity="0.8"/>
                                        <TextBlock Text="{Binding Analytics.NewGroupsThisMonth}" 
                                                   FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Завершившие -->
                                <Border Grid.Column="1" Grid.Row="2" Classes="statistic-card" Margin="4,4,0,0">
                                    <StackPanel>
                                        <TextBlock Text="✅ Завершили" FontSize="12" Opacity="0.8"/>
                                        <TextBlock Text="{Binding Analytics.CompletedGroups}" 
                                                   FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Быстрые действия -->
                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="8" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="⚡ Быстрые действия" FontWeight="SemiBold" FontSize="14"/>
                            <StackPanel Spacing="4">
                                <Button Content="👨‍🎓 Управление студентами" 
                                        Command="{Binding ManageStudentsCommand}"
                                        CommandParameter="{Binding SelectedGroup}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="👨‍🏫 Назначить куратора" 
                                        Command="{Binding AssignCuratorCommand}"
                                        CommandParameter="{Binding SelectedGroup}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="✏️ Редактировать группу" 
                                        Command="{Binding EditGroupCommand}"
                                        CommandParameter="{Binding SelectedGroup}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Индикатор загрузки -->
        <Border Grid.RowSpan="2" Grid.ColumnSpan="2" 
                Background="#80000000" 
                IsVisible="{Binding IsLoading}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Загрузка групп..." HorizontalAlignment="Center" 
                           Foreground="White" FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Стили -->
    <UserControl.Styles>
        <Style Selector="Border.statistic-card">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#FF4444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF6666"/>
        </Style>
        
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>
</UserControl> 